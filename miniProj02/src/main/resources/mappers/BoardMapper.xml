<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kosa.hr.board.BoardMapper">
	
	<sql id="search">
        <where>
            <if test="searchKey != null and searchKey != ''">
                btitle like concat('%', #{searchKey}, '%')
            </if>
        </where>
    </sql>

	<select id="getList" resultType="BoardVO">
		SELECT B.BNO,B.BTITLE, B.BCONTENT, M.MNAME AS BWRITER , B.BDATE FROM TB_BOARD B INNER JOIN TB_MEMBER M ON B.MID=M.MID  	
		<include refid="search"/>
		order by bno desc limit #{skip}, #{size}
    </select>
    
    <select id="getTotalCount" resultType="int">
		select 
			count(*)   
		from tb_board 
		<include refid="search"/>
    </select>
 







</mapper>